    // More info on cppdbg-specific launch parameters: https://github.com/Microsoft/vscode-cpptools/blob/master/launch.md
    "version": "0.2.0",
    "configurations": [
        {
            "name": "simplertk2b",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/simplertk2b",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "windows": {
                "program": "${workspaceFolder}/simplertk2b.exe",
                "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // Build the app before debugging
            "preLaunchTask": "build simplertk2b"
        }
    ]
}